<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ImageMirror">
        <item name="android:scaleX">1</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/english_bold</item>
    </style>

    <style name="normal">
        <item name="android:fontFamily">@font/english_normal</item>
    </style>

    <style name="BottomDiaologTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#767772</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/bg_registration_button</item>
    </style>

    <style name="ButtonDialogButtonText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3983f1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomDialogButtonsSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#BABAB8</item>
    </style>

</resources>