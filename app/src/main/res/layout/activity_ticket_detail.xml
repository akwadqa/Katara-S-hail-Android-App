<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".view.activities.SplashActivity">

        <include layout="@layout/component_top" />

        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/ImageMirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/my_ticket"
                android:textColor="@color/white"
                android:textSize="@dimen/large"
                 />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_continue"
            android:layout_below="@id/rl_toolbar"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/white_rounded"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_rounded"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/visit_ticket"
                android:textColor="@color/white"
                android:textSize="@dimen/normal"
                 />


            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    style="@style/normal"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/text"
                    android:textSize="@dimen/normal" />


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    style="@style/normal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_date"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/text"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textColor="@color/text"
                    android:textSize="@dimen/normal" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>