<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".view.activities.SplashActivity">

        <include layout="@layout/component_top" />

        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/ImageMirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/large" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_continue"
            android:layout_below="@id/rl_toolbar"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/white_rounded">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">


                        <ImageView
                            android:id="@+id/iv_component"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="@dimen/_10sdp"
                            android:src="@drawable/red_component" />

                        <TextView
                            style="@style/bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/iv_component"
                            android:text="@string/new_bidder"
                            android:textColor="@color/text"
                            android:textSize="@dimen/normal" />

                    </RelativeLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_passport"
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="@string/passport_no_s"
                        android:textColor="@color/text"
                        android:textSize="@dimen/normal" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:visibility="gone"
                        android:id="@+id/passport_til"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:textColorHint="@color/hint"
                        android:layout_height="@dimen/_45sdp"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:boxStrokeColor="@color/box_color"
                        app:boxStrokeWidth="@dimen/_1sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passport_et"
                            style="@style/normal"
                            android:hint="@string/hint_passport_no_s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/passport_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/small" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="@string/full_name_s"
                        android:textColor="@color/text"
                        android:textSize="@dimen/normal" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_til"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        android:textColorHint="@color/hint"
                        app:boxStrokeColor="@color/box_color"
                        app:boxStrokeWidth="@dimen/_1sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_et"
                            style="@style/normal"
                            android:hint="@string/hint_full_name_s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/name"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/small" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_nationality_heading"
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="@string/nationality_s"
                        android:textColor="@color/text"
                        android:textSize="@dimen/normal" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinner_nationality"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@null"
                            android:clickable="false" />

                        <TextView
                            android:id="@+id/nationality_tv"
                            style="@style/normal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/text_stroke"
                            android:drawableStart="@drawable/nationality_icon"
                            android:drawableEnd="@drawable/path"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_12sdp" />
                    </FrameLayout>


                    <TextView
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/mob_no_s"
                        android:textColor="@color/text"
                        android:textSize="@dimen/normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">


                        <FrameLayout
                            android:id="@+id/frame_isd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:overlapAnchor="false"
                                android:spinnerMode="dropdown"
                                android:dropDownSelector="@color/background"
                                android:dropDownWidth="match_parent"
                                android:dropDownVerticalOffset="@dimen/_45sdp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:focusable="false"
                                android:id="@+id/spinner_isd"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:background="@null"
                                android:clickable="false" />


                            <LinearLayout
                                android:id="@+id/llm_isd"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@drawable/text_stroke">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:src="@drawable/number" />


                                <TextView
                                    style="@style/normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_45sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:drawableEnd="@drawable/path"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:layoutDirection="ltr"
                                    android:id="@+id/tv_isd"
                                    android:textColor="@color/text"
                                    android:textSize="@dimen/small" />

                            </LinearLayout>
                        </FrameLayout>

                        <EditText
                            android:id="@+id/number_et"
                            style="@style/normal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@drawable/text_stroke"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/small" />

                        <!--                    <com.google.android.material.textfield.TextInputLayout-->
                        <!--                        android:id="@+id/number_til"-->
                        <!--                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="@dimen/_45sdp"-->
                        <!--                        app:boxStrokeColor="@color/box_color"-->
                        <!--                        app:boxStrokeWidth="@dimen/_1sdp">-->

                        <!--                        <com.google.android.material.textfield.TextInputEditText-->
                        <!--                            android:id="@+id/number_et"-->
                        <!--                            android:layoutDirection="ltr"-->
                        <!--                            style="@style/normal"-->
                        <!--                            android:text="sajhakjsda"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:drawableStart="@drawable/number"-->
                        <!--                            android:drawablePadding="@dimen/_5sdp"-->
                        <!--                            android:inputType="number"-->
                        <!--                            android:gravity="center_vertical"-->
                        <!--                            android:textSize="@dimen/small" />-->


                        <!--                             -->
                        <!--                    </com.google.android.material.textfield.TextInputLayout>-->


                    </LinearLayout>

                    <TextView
                        style="@style/bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/email"
                        android:textColor="@color/text"
                        android:textSize="@dimen/normal" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_til"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        android:textColorHint="@color/hint"
                        app:boxStrokeColor="@color/box_color"
                        app:boxStrokeWidth="@dimen/_1sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_et"
                            style="@style/normal"
                            android:hint="@string/hint_email_s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/email"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:textSize="@dimen/small" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/lin_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/qatari_id_copy"
                            android:textColor="@color/text"
                            android:textSize="@dimen/normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/rl_front"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@drawable/primary_stroke">

                                    <ImageView
                                        android:id="@+id/iv_front"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/front" />

                                </RelativeLayout>

                                <ImageView
                                    android:id="@+id/iv_front_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/gright"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <RelativeLayout

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/rl_rear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@drawable/primary_stroke">

                                    <ImageView
                                        android:id="@+id/iv_rear"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/back" />

                                </RelativeLayout>

                                <ImageView
                                    android:id="@+id/iv_back_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/gright"
                                    android:visibility="gone" />

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/sw_tc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tc"
                            style="@style/normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/by_continuing_and_completing_the_registration_you_are_considered_to_agree_to_the_terms_and_conditions"
                            android:textColor="@color/text"
                            android:textSize="@dimen/small" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_continue"
            style="@style/bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/button_rounded"
            android:gravity="center"
            android:text="@string/s_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/normal" />

    </RelativeLayout>


</layout>