<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <ImageView
            android:id="@+id/ivImage"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <ImageView
            android:id="@+id/iv_back"
            style="@style/ImageMirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/grey"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back" />



    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_175sdp"
        android:background="@drawable/top_white_rounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/rl_price"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/bold"
            android:textColor="@color/black"
            android:textSize="@dimen/large"
            />

            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_alignParentEnd="true"
                android:minWidth="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bold"
                android:textColor="@color/primary"
                android:textSize="@dimen/very_large"
                />

            <TextView
                android:layout_below="@+id/tv_price"
                android:text="QAR"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normal"
                android:textColor="@color/text"
                android:textSize="@dimen/normal"
                />

            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:gravity="start"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            style="@style/bold"
            android:textSize="@dimen/normal"
            android:text="@string/product_details"
            />

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="-15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/box_color"/>


        <TextView
            android:gravity="start"
            android:id="@+id/tv_description"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/normal"
            android:textColor="@color/black"
            android:textSize="@dimen/normal"
            />



        <TextView
            android:id="@+id/tv_vendor"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/brown_rounded"
            android:gravity="center"
            android:text="@string/contact_vendor"
            style="@style/bold"
            android:textColor="@color/white"
            android:textSize="@dimen/normal"
            />



    </LinearLayout>

</RelativeLayout>

</layout>