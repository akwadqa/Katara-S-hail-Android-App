<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.MainActivity"
        tools:ignore="HardcodedText"
        tools:viewBindingIgnore="true">

        <FrameLayout
            android:id="@+id/fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:elevation="@dimen/_10sdp"
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/menu_white_rounded"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/home_active"
                    android:text="@string/menu_home"
                    style="@style/normal"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/very_small" />

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/primary_circle" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ticket"
                    android:gravity="center_horizontal"
                    android:text="@string/my_ticket"
                    style="@style/normal"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/very_small" />

                <ImageView
                    android:id="@+id/iv_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/primary_circle"
                    android:visibility="invisible" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/account"
                    android:text="@string/menu_account"
                    style="@style/normal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/very_small" />

                <ImageView
                    android:id="@+id/iv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/primary_circle"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/transparent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_profile"
                        android:layout_marginTop="-25dp"
                        android:layoutDirection="inherit"
                        android:background="@drawable/menu_rounded_grey">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:paddingBottom="@dimen/_20sdp"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="@string/call_us"
                                    style="@style/bold"
                                    android:textColor="@color/white"

                                    android:textSize="@dimen/small" />

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_gravity="start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        style="@style/ImageMirror"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mobile_red_menu"/>

                                    <TextView
                                        android:id="@+id/tv_contact"
                                        android:layoutDirection="ltr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:text="+97455792820"
                                        style="@style/normal"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/very_small" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_gravity="start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        style="@style/ImageMirror"
                                       android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/email_red_menu"/>

                                    <TextView
                                        android:id="@+id/tv_email"
                                        style="@style/normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:text="s-hail@katara.net"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/very_small" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="@string/contact_us"
                                    android:textColor="@color/white"

                                    style="@style/bold"
                                    android:textSize="@dimen/small" />

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_intsa"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/insta"/>

                                    <ImageView
                                        android:id="@+id/iv_fb"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/fb"/>

                                    <ImageView
                                        android:id="@+id/iv_twitter"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/twitter"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="@string/exhibition_location"
                                    android:drawableEnd="@drawable/location"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:background="@drawable/button_rounded_more"
                                    android:textColor="@color/white"
                                    style="@style/normal"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:textSize="@dimen/very_small" />

                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_version"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_5sdp"
                            style="@style/normal"
                            android:layoutDirection="ltr"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/very_small" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_350sdp"
                        android:background="@drawable/menu_rounded_white">


                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ImageMirror"
                            android:rotation="180"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:padding="@dimen/_10sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/menu_arrow" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"
                                android:src="@drawable/profile_menu" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/text"
                                android:textSize="@dimen/normal"
                                style="@style/bold"
                                 />

                            <TextView
                                android:id="@+id/tv_number"
                                android:layoutDirection="ltr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/grey"
                                style="@style/normal"
                                android:textSize="@dimen/normal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_change_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:drawableStart="@drawable/change"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            style="@style/normal"
                            android:text="@string/change_language"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/small" />

                        <TextView
                            android:id="@+id/tv_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            style="@style/normal"
                            android:drawableStart="@drawable/sign_out_menu"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@string/sign_out_from_app"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/small" />

                        </LinearLayout>


                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>





        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>